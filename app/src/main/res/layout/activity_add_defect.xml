<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddDefect">

    <!-- Content Container -->
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/add_defect_inspection_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/add_defect_result_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_defect_subresult_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp">

            </LinearLayout>

            <EditText
                android:id="@+id/add_defect_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"


                android:gravity="top"
                android:hint="примечание"
                android:inputType="textMultiLine" />


            <Button
                android:id="@+id/add_defect_photo_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onAddPhotoBtnClick"
                android:text="Добавить фото" />

            <view xmlns:android="http://schemas.android.com/apk/res/android"
                class="ru.drsk.progserega.inspectionsheet.activities.ExpandableHeightGridView"
                android:id="@+id/add_defect_photos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:columnWidth="115dp"
                android:gravity="center"
                android:horizontalSpacing="5dp"
                android:numColumns="auto_fit"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp"
                android:nestedScrollingEnabled="false"
                />

            <Space
                android:layout_width="1dp"
                android:layout_height="40dp" />


        </LinearLayout>

</ScrollView>


    <LinearLayout
        android:id="@+id/futer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/linLayout"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:onClick="onSaveBtnPress"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/save_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@null"
                android:onClick="onSaveBtnPress" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/save"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>



</RelativeLayout>