<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.drsk.progserega.inspectionsheet">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- Needed only if your app targets Android 5.0 (API level 21) or higher. -->
    <uses-feature android:name="android.hardware.location.gps" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".InspectionSheetApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SelectTypeLine" />
        <activity android:name=".activities.SearchObject" />
        <activity android:name=".activities.searchBySpRes" />
        <activity android:name=".activities.createInspection" />
        <activity android:name=".activities.CreateDefect" />
        <activity android:name=".activities.FoundedDefects" />
        <activity android:name=".activities.EndInspection" />
        <activity android:name=".activities.InspectTower" />
        <activity
            android:name=".activities.AddDefect"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activities.InspectTransformer" />
        <activity
            android:name=".activities.Test2"
            android:label="@string/title_activity_test2"></activity>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="ru.drsk.progserega.inspectionsheet.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"></meta-data>
        </provider>

    </application>

</manifest>